{
    "manifest_version": 2,
    "name": "Leet Xt",
    "version": "0.2.9",
    "description": "Supercharge your LeetCode practice - Add to Friends, Premium Features, per Contest Friends Rating, and more!",
    "icons": {
        "128": "/icons/logo_128.png",
        "48": "/icons/logo_48.png",
        "32": "/icons/logo_32.png",
        "16": "/icons/logo_16.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*"
            ],
            "js": [
                "js/lx_contest.js",
                "js/lx_premium.js",
                "js/lx_friends.js",
                "js/lx.js"
            ],
            "css": [
                "css/lx.css"
            ]
        }
    ],
    "permissions": [
        "downloads",
        "activeTab",
        "storage"
    ]
}