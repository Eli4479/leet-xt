{
    "manifest_version": 3,
    "name": "Leetcode Extended",
    "version": "1.1",
    "description": "Supercharge your LeetCode practice - Add to Friends, Premium Features, per Contest Friends Rating, and more!",
    "icons": {
        "128": "/icons/logo128.png",
        "48": "/icons/logo48.png",
        "32": "/icons/logo32.png",
        "16": "/icons/logo16.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*"
            ],
            "js": [
                "js/lx_friends.js",
                "js/lx_premium.js",
                "js/lx_contest.js"
            ],
            "css": [
                "css/lx.css"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}